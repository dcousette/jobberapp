.container
  %ul.nav.nav-pills 
    %li(role='presentation')= link_to 'Home', home_path
    - if logged_in?    
      %li(role='presentation')= link_to 'My Profile', user_path(current_user)
      %li(role='presentation')= link_to 'Log Out', signout_path, method: :delete 
    - else 
      %li(role='presentation')= link_to 'Sign Up', new_user_path
      %li(role='presentation')= link_to '(Already a user?) Log in', signin_path
    