.container 
  .home-content
    .main-logo 
      %h1.logo Jobber!
      %h3 Find your dream job today.
      
    .form-group
      = form_tag search_path, method: :get, class: 'form-inline' do 
        = label_tag :search_term, "Job title, Company, or Keyword", class:'form-label'
        = search_field_tag :search_term, nil, class: 'form-control', placeholder: 'Search me'
      
        = submit_tag 'Search Jobs', class: 'btn btn-default'