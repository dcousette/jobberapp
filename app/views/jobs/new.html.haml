.container
  .job-form.col-md-4
    = form_for [@company, @job] do |f|
      .form-group 
        = f.label 'Job title'
        = f.text_field :title, class: 'form-control' 
      
      .form-group 
        = f.label 'Job description'  
        = f.text_area :description, rows: 5, class: 'form-control' 
      
      .form-group 
        = f.label 'Job requirements'  
        = f.text_area :requirements, rows: 5, class: 'form-control'  
      
      .form-group
        = f.label'Salary' 
        = f.text_field :salary, class: 'form-control'

      = f.submit 'Post job', class: 'btn btn-default' 